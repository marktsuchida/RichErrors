# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[*.md]
indent_size = unset

[*.txt]
indent_size = unset

[test/catch2/*]
indent_size = unset
